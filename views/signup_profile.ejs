<!doctype html>
<html>
<!-- <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"> -->
<head>
    <div id="header">
        <h1>Create your profile</h1>
    </div>
    <div id="headericon">
        <img src="/images/Groop_icon.png" height="100px", width="100px">
    </div>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>

<div id = "profilecontent"  >
    <div class="profilebox1 article">
    <fieldset style="height: 250px">
    <form>
        <p><u>Please input your basic information</u></p>
        <div class="form-group">
            <label>Name :</label>
            <input type="text" class="long"/>
        </div> 
        <div class="form-group">
            <label>College :</label>
            <input type="text" maxlength="10"/>
        </div> 
        <div class="form-group">
            <label>Club :</label>
            <select>
                <option>
                </option>
                <option value="1">Club 1
                <option value="2">Club 2
                <option value="3">Club 3
                <option value="4">Club 4
                <option value="5">Club 5
                </option>
            </select>
        </div> 
        <div class="form-group">
            <label>Role :</label>
            <select>
                <option>
                </option>
                <option value="1">President
                <option value="2">VP
                <option value="3">director
                <option value="4">Manager
                <option value="5">Member
                </option>
            </select>
        </div> 
    </form>
    </fieldset>
    <button href="/signup_create_club" class="groopbutton" style = "margin-top:20px">Confirm</button>
</div> 

<div id="Profile_picture" class="profilebox2 article">
    <fieldset>
        <form name="form0" id="form0" style="text-align: center; height: 250px">
            <img src="/images/persona.png" id="img0", height="170", width="170" ><br>
            <input type="file" name="file0" id="file0" multiple="multiple" />
        </form>
    </fieldset>
    <button href="/signup" class="groopbutton" style = "margin-top:20px">Cancel</button>
</div>
</body>
</html>
